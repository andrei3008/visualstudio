# Google Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Google Site Verification
GOOGLE_SITE_VERIFICATION=your-google-verification-code

# Facebook App ID
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# Google Site Verification (alternative)
GOOGLE_SITE_VERIFICATION=google-site-verification-code

# Sentry (optional)
SENTRY_DSN=your-sentry-dsn

# Database URL
DATABASE_URL="postgresql://username:password@localhost:5432/visualstudio"

# NextAuth URL
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret

# Email (optional)
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@example.com
EMAIL_SERVER_PASSWORD=your-email-password
EMAIL_FROM=noreply@visualstudio.ro

# File Upload (optional)
UPLOAD_DIR="./public/uploads"
MAX_FILE_SIZE=10485760

# Analytics (optional)
ANALYTICS_ENABLED=true
ANALYTICS_PLATFORM=google-analytics